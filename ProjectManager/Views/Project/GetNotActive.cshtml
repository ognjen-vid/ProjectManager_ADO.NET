@model IEnumerable<ProjectManager.Models.Employee>
@{
    ViewBag.Title = "Add To Project";
}

@using (Html.BeginForm("AddToProject", "Project"))
{
    <div class="form-horizontal">
        <h4>Add To Project</h4>
        <hr />
        <input type="hidden" value="@ViewBag.ProjectID" name="projectId" />
        <div class="form-group">
            <div class="col-md-10">
                <label class="control-label col-md-2">Available employees</label>
                <select name="SelectedEmployeeId" class="form-control">
                    @foreach (var employee in Model)
                    {
                        <option value="@employee.Id">@employee.Name @employee.LastName</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </div>
    </div>
}
